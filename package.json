{
	"name": "stockbit-test",
	"version": "1.0.0",
	"main": "index.js",
	"repository": "git@github.com:lugassawan/stockbit-test.git",
	"author": "Lugas Septiawan <lugassawan@gmail.com>",
	"license": "MIT",
	"private": true,
	"type": "module",
	"engines": {
		"node": ">=14.x",
		"yarn": "1.x"
	},
	"scripts": {
		"start": "node --experimental-specifier-resolution=node answer-2/main.js",
		"dev": "nodemon --experimental-specifier-resolution=node answer-2/main.js",
		"test": "cross-env NODE_ENV=test jest",
		"test:watch": "cross-env NODE_ENV=test jest --watch",
		"test:cov": "cross-env NODE_ENV=test jest --coverage",
		"test:e2e": "cross-env NODE_ENV=test jest --config ./answer-2/test/jest-e2e.json"
	},
	"dependencies": {
		"@babel/runtime": "^7.16.0",
		"axios": "^0.24.0",
		"cors": "^2.8.5",
		"dotenv": "^10.0.0",
		"express": "^4.17.1",
		"helmet": "^4.6.0"
	},
	"devDependencies": {
		"@babel/core": "^7.16.0",
		"@babel/plugin-transform-runtime": "^7.16.0",
		"@babel/preset-env": "^7.16.0",
		"babel-jest": "^27.3.1",
		"cross-env": "^7.0.3",
		"jest": "^27.3.1",
		"nodemon": "^2.0.14",
		"supertest": "^6.1.6"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json"
		],
		"roots": [
			"answer-2",
			"answer-3",
			"answer-4"
		],
		"testRegex": ".*\\.spec\\.js$",
		"clearMocks": true,
		"coverageDirectory": "coverage",
		"collectCoverageFrom": [
			"**/*.js",
			"!**/*.e2e-spec.js"
		],
		"coverageThreshold": {
			"global": {
				"branches": 100,
				"functions": 100,
				"lines": 100,
				"statements": 100
			}
		},
		"testEnvironment": "node"
	}
}
